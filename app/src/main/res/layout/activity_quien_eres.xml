<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".QuienEres">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="70dp"
            android:textSize="22dp"
            android:layout_marginTop="40dp"
            android:textColor="#190707"
            android:text="RegÃ­strate en OrdersHome" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="130dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="170dp"
            android:layout_marginTop="0dp"
            android:fontFamily="light italic"
            android:text="Soy"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/administrador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/home"
            android:layout_marginBottom="30dp"
            android:background="#82E0AA"
            android:fontFamily="serif"
            android:text="Administrador"
            android:textColor="#FFF"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="135dp"
            tools:layout_editor_absoluteY="295dp" />

        <Button
            android:id="@+id/repartidor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/motorbike"
            android:layout_marginBottom="30dp"
            android:background="#82E0AA"
            android:fontFamily="serif"
            android:text="Repartidor"
            android:textColor="#FFF"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="135dp"
            tools:layout_editor_absoluteY="295dp" />

        <Button
            android:id="@+id/cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="#82E0AA"
            android:drawableTop="@drawable/face"
            android:fontFamily="serif"
            android:text="Cliente"
            android:textColor="#FFF"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="135dp"
            tools:layout_editor_absoluteY="231dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>